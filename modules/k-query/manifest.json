{
  "manifest_version": 3,
  "name": "K-Query",
  "version": "1.0",
  "description": "검색어 생성 AI 툴입니다.",
  "permissions": [
    "sidePanel",
    "storage"
  ],
  "side_panel": {
    "default_path": "src/sidebar/sidepanel.html"
  },
  "background": {
    "service_worker": "src/core/background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
